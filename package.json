    "@testing-library/user-event": "^13.5.0",
    "@types/classnames": "^2.3.1",
    "@types/jest": "^27.5.2",
    "@types/lodash": "^4.14.191",
    "@types/node": "^16.18.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/react-transition-group": "^4.4.5",
    "async-validator": "^4.2.5",
    "axios": "^1.3.3",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
